<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.twinstar.childtimeutilization">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

      <application
        android:name=".ChildInfoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ParentInfoActivity"
            android:label="@string/title_activity_parent_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticActivity"
            android:label="@string/title_activity_statistic"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddChildActivity"
            android:label="@string/title_activity_child_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".EditChildActivity"
            android:label="@string/title_activity_child_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
